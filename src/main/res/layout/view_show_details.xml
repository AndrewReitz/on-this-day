<?xml version="1.0" encoding="utf-8"?>

<com.andrewreitz.onthisday.ui.showdetails.ShowDetailsView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ProgressBar
      android:id="@+id/show_details_progress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"/>

  <LinearLayout
      android:id="@+id/show_details_content"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/show_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/show_details_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/show_details_venue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/show_details_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="?android:attr/listDivider" />

  </LinearLayout>

</com.andrewreitz.onthisday.ui.showdetails.ShowDetailsView>