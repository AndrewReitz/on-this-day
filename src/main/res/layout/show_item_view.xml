<?xml version="1.0" encoding="utf-8"?>

<com.andrewreitz.onthisday.ui.show.ShowItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_layout_padding_half">

  <!-- A CardView that contains a TextView -->
  <android.support.v7.widget.CardView
      xmlns:card_view="http://schemas.android.com/apk/res-auto"
      android:id="@+id/card_view"
      android:layout_gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      card_view:cardCornerRadius="4dp"
      >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
      <TextView
          android:id="@+id/show_item_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAppearance="?android:textAppearanceLarge"
          />

      <TextView
          android:id="@+id/show_item_venue_and_location"
          android:textAppearance="?android:textAppearanceSmall"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />

      <View
          android:layout_height="2dp"
          android:layout_marginTop="@dimen/default_layout_padding_half"
          android:layout_marginBottom="@dimen/default_layout_padding_half"
          android:layout_width="fill_parent"
          android:background="?android:attr/listDivider"
          />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >

        <com.andrewreitz.onthisday.ui.common.MoreLessButton
            android:id="@+id/show_item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_layout_margin_half"
            android:layout_marginStart="@dimen/default_layout_margin_half"
            android:contentDescription="@string/set_list"
            />

        <ImageView
            android:id="@+id/show_item_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/show_item_more"
            android:layout_toStartOf="@id/show_item_more"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_layout_margin_half"
            android:layout_marginStart="@dimen/default_layout_margin_half"
            android:src="@drawable/ic_play_arrow"
            android:contentDescription="@string/play"
            />

        <ImageView
            android:id="@+id/show_item_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/show_item_play"
            android:layout_toStartOf="@id/show_item_play"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_layout_margin_half"
            android:layout_marginStart="@dimen/default_layout_margin_half"
            android:src="@drawable/ic_star"
            android:contentDescription="@string/favorite"
            />

        <ImageView
            android:id="@+id/show_item_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/show_item_favorite"
            android:layout_toStartOf="@id/show_item_favorite"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_layout_margin_half"
            android:layout_marginStart="@dimen/default_layout_margin_half"
            android:src="@drawable/ic_save"
            android:contentDescription="@string/download_show"
            />
      </RelativeLayout>

      <View
          android:id="@+id/show_item_set_list_divider"
          android:layout_height="2dp"
          android:layout_marginTop="@dimen/default_layout_padding_half"
          android:layout_marginBottom="@dimen/default_layout_padding_half"
          android:layout_width="fill_parent"
          android:background="?android:attr/listDivider"
          android:visibility="gone"
          />

      <LinearLayout
          android:id="@+id/show_item_set_list"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:visibility="gone"
          />

    </LinearLayout>

  </android.support.v7.widget.CardView>
</com.andrewreitz.onthisday.ui.show.ShowItemView>
