<?xml version="1.0" encoding="utf-8"?>

<com.andrewreitz.onthisday.ui.show.ShowItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_layout_padding_half">

  <!-- A CardView that contains a TextView -->
  <android.support.v7.widget.CardView
      xmlns:card_view="http://schemas.android.com/apk/res-auto"
      android:id="@+id/card_view"
      android:layout_gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      card_view:cardCornerRadius="4dp"
      >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
      <TextView
          android:id="@+id/show_item_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAppearance="?android:textAppearanceLarge"
          />

      <TextView
          android:id="@+id/show_item_venue_and_location"
          android:textAppearance="?android:textAppearanceSmall"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />

      <View
          android:layout_height="2dp"
          android:layout_marginTop="@dimen/default_layout_padding_half"
          android:layout_marginBottom="@dimen/default_layout_padding_half"
          android:layout_width="fill_parent"
          android:background="?android:attr/listDivider"
          />

      <LinearLayout
          android:id="@+id/show_item_set_list"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:visibility="gone"
          />

      <!-- TODO Bar with save, download, share, open in browser etc. -->
    </LinearLayout>

  </android.support.v7.widget.CardView>
</com.andrewreitz.onthisday.ui.show.ShowItemView>
